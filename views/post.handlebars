<ol class="flex flex-col justify-center items-center w-1/2">
    <div class="flex flex-col justify-center bg-blue-300 p-4">
    <li>
        <div>
            <h3 class="text-2xl py-2">{{post.title}}</h3>
        </div>
        <div>
            <p class="text-sm mb-2">By: {{post.User.username}}</p>
        </div>
        <div>
            <p id="post-id" class="hidden">{{post.id}}</p>
            <p class="text-lg mb-6">{{post.body}}</p>
        </div>
    </li>
    <li>
        <h4 class="text-lg">Comments</h4>
        <div>
            <ul>
                {{#each post.Comments}}
                <li>
                    <p>{{this.body}}</p>
                    <p>By: {{this.User.username}}</p>
                </li>
                {{/each}}
            </ul>
    </li>
    </div> 
    {{!-- comment form --}}
    <li class="bg-blue-900 p-3 text-white ">
        <form id="comment-form" class="flex flex-col items-center justify-center">
            <div>
                <label for="comment">Comment:</label>
                <input type="text" class="text-black" id="comment-text" name="comment" placeholder="Comment">
            </div>
            <button id="comment-submit" type="submit" class="bg-blue-200 text-black p-2 my-2">Post Comment</button>
        </form>
    </li>
</ol>

        <script src="/js/comment.js"></script>