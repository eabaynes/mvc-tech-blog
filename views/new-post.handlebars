<div class="flex flex-col items-center justify-center p-2">
    <h3>New Post</h3>
    <form id="new-post-form" class="bg-blue-300 flex p-3 flex-col justify-center items-center">
        <div class="py-2">
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title">
        </div>
        <div class="py-2">
            <label for="body">Body:</label>
            <textarea class="form-control" id="body" name="body" placeholder="Body"></textarea>
        </div>
        <button id="new-post-submit" type="submit" class="bg-blue-900 p-2 text-white">Create Post</button>
    </form>
    <script src="/js/new-post.js"></script>
</div>