<div class="flex flex-col items-center justify-center p-2">
    <h3>Edit Post</h3>
    <form id="edit-post-form" class="bg-blue-300 flex p-3 flex-col justify-center items-center">
        <div class="py-2">
            <p id="{{post.id}}" class="hidden"></p>
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" name="title" value="{{post.title}}">
        </div>
        <div class="py-2">
            <label for="body">Body:</label>
            <textarea class="form-control" id="body" name="body">{{post.body}}</textarea>
        </div>
        <button id="edit-post-submit" type="submit" class="bg-blue-900 p-2 text-white">Edit Post</button>
    </form>
    <script src="/js/edit.js"></script>
</div>